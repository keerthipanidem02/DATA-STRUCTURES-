
#include <stdio.h>
#define s 4
int a[s],f=0,r=0,c=0;
void enqueue()
{  int v;
    
    if(c==s)
    {
        printf("u cannot enqueue\n");
    }
    else{    printf("enter element to enqueue:");
    scanf("%d",&v);
    a[r]=v;
    r=(r+1)%s;
    c++;
}
}
void dequeue()
{   if(r==f && c==0)
{
    printf("u cannot dequeue\n");
}
else{
    printf("value deleted is: %d",a[f]);
    f=(f+1)%s;
    c--;
}
}
void display()
{int i;
   if(f==0 && r==0 && c==0)
   {
      printf("queue is empty starting\n");
   }
   else if(f==r && c==0)
   {
      printf("queue is empty\n");
   }
   else if(f!=r)
   {
      if(r>f)
      {
         for(i=f;i<r;i++)
         {
            printf("%d\n",a[i]);
         }
      }
      if(r<f)
      {
         for(i=f;i<s;i++)
         {
            printf("%d\n",a[i]);
         }
         for(i=0;i<r;i++)
         {
            printf("%d\n",a[i]);
         }
      }
   }
   else{
      return ;
   }
}
void main()
{
    int choice=0;
    while(choice<4)
    {
        printf("\n1-enqueue\n2-dequeue\n3-display\n");
        printf("enter ur choice\n");
        scanf("%d\n",&choice);
        switch(choice)
        {
            case 1:
                   enqueue();
                   break;
            case 2:
                   dequeue();
                   break;
            case 3:
                   display();
                   break;
        }
    }
}
