#include<stdio.h>
#include<stdlib.h>
struct node{
        int coeff;
        int expo;
        struct node *next;
}*temp,*newnode;
struct node* head=NULL;
struct node* tail=NULL;
struct node* temp1;
struct node* temp2;
struct node* Creation(struct node* head)
{
int n,c,e;
do{
        newnode=(struct node*)malloc(sizeof(struct node));
        printf("enter c ");
        scanf("%d",&c);
        printf("enter e");
        scanf("%d",&e);
        newnode->coeff=c;
        newnode->expo=e;
        newnode->next=NULL;
        if(head==NULL)
        {
                head=newnode;
                tail=newnode;
        }
        else
        { tail->next=newnode;
                tail=newnode;
        }
        printf("enter 1 to continue");
        fflush(stdin);
        scanf("%d",&n);
}while(n==1);
return head;
}
void Display(struct node* head)
{
temp=head;
while(temp!=NULL)
{
        printf("%dx^%d+",temp->coeff,temp->expo);
        temp=temp->next;
}
}
struct node polyadd(struct node* head1,struct node* head2)
{temp1=head1;
temp2=head2;
        while(temp1 && temp2)
        {
                if(temp1->expo==temp2->expo)
                {
                        printf("%dx^%d+",temp1->coeff+temp2->coeff,temp1->expo);
                        temp1=temp1->next;
                        temp2=temp2->next;
                }
                else if(temp1->expo<temp2->expo)
                {
                        printf("%dx^%d+",temp2->coeff,temp2->expo);
                        temp2=temp2->next;
                }
                else
                {
                        printf("%dx^%d+",temp1->coeff,temp1->expo);
                        temp1=temp1->next;
                }
        }
        if(temp1==NULL)
        {
                while(temp2!=NULL)
                {
                        printf("%dx^%d+",temp2->coeff,temp2->expo);
                        temp2=temp2->next;
                }
        }
        else
        {
                while(temp1!=NULL)

        {       printf("%dx^%d+",temp1->coeff,temp1->expo);
                        temp1=temp1->next;      }
        }

}
int main()
{struct node *head1=NULL;
struct node *head2=NULL;
struct node *a;
struct node *b;
printf("enter first polynomial");
a=Creation(head1);
printf("enter second polynomial");
b=Creation(head2);
printf("first polynomial\n");
Display(a);
printf("\nsecond polynomial\n");
Display(b);
printf("\naddition of two polynomials\n");
polyadd(a,b);

}





